figure {
  margin: 1em 0; }
  figure figcaption {
    font-family: monospace, monospace;
    font-size: 0.75em;
    text-align: center;
    color: grey; }

.footnote-definition sup {
  margin-left: -1.5em;
  float: left; }

.footnote-definition .footnote-body {
  margin: 1em 0;
  padding: 0 1em;
  border: 1px dashed rgba(0, 0, 128, 0.3);
  background-color: rgba(200, 200, 200, 0.2); }
  .footnote-definition .footnote-body p:only-child {
    margin: 0.2em 0; }

header {
  display: flex;
  justify-content: space-between; }
  header nav {
    display: flex;
    align-items: center;
    justify-content: space-between; }
  header a + a {
    margin-left: 1rem; }

.coverimage {
  height: auto;
  width: 100%; }

.icon {
  width: 0.85em;
  height: 0.85em;
  fill: navy;
  display: inline; }

.information {
  margin-top: 1em;
  display: block;
  margin-left: auto;
  font-family: "Roboto"; }

.healthlevel, .servings, .duration, .date, .author {
  display: inline-block;
  vertical-align: middle;
  color: navy;
  margin-right: 1.4em; }

/*.level1 {color: green;
  display: inline-block;}
.level2 {color: orange;
display: inline-block;}
.level3 {color: red;
display: inline-block;}

*/
.level1, .level2, .level3 {
  color: navy;
  display: inline-block; }

.table_header {
  font-size: 1rem;
  font-family: "Roboto";
  padding-bottom: 1rem; }

.items {
  width: 50%;
  float: right;
  font-family: "Roboto"; }

.content {
  margin-top: 2.35em;
  font-size: 1rem;
  width: 50%;
  float: left;
  font-family: "Roboto";
  margin-bottom: 1rem; }

.wrapper {
  overflow: hidden; }

@media screen and (max-width: 1000px) {
  .items {
    float: none;
    margin-right: 0;
    width: auto; }
  .content {
    width: auto; } }

