.darkmode--activated .icon, .duration, .date, .level1, .level2, .level3, .servings, .author, a, p, li {
  color: #000;
  fill: black; }

.darkmode-toggle {
  color: white; }

.darkmode-toggle--white {
  color: black; }

.posts {
  margin: 0;
  list-style: none; }
  .posts .post a {
    display: block;
    padding: 0.5em 0;
    color: black; }
    .posts .post a:hover, .posts .post a:focus, .posts .post a:active {
      text-decoration: none;
      background: rgba(200, 200, 200, 0.2); }
  .posts .post date {
    font-family: monospace, monospace;
    font-size: 0.8rem;
    vertical-align: middle;
    padding-right: 2rem;
    color: grey; }
